<header class="journal-page-header">
  {{#if page.title.show}}
  <h1>
    <span class="name">{{page.name}}</span>
  </h1>
  {{/if}}
  <p class="details">
    {{#if customer}}
    {{localize "QUESTBOARD.SHOP.VIEW.CUSTOMER.current" name=customer.name}}
    {{else}}
    {{localize "QUESTBOARD.SHOP.VIEW.CUSTOMER.none"}}
    {{/if}}
    <a class="icon fa-solid fa-cog" data-action="changeCustomer"></a>
  </p>
</header>
